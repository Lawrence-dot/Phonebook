@model List<Phonebook.Models.Course>;

@{
    ViewData["Title"] = "Courses";
}

<div>
    <div>
        <div class="input-group mb-3 mt-2  justify-content-center">
            <input type="text" class="form-control searchbar" placeholder="Search Courses" aria-label="Recipient's username" aria-describedby="button-addon2">
            <button class="btn btn-outline-secondary" type="button" id="button-addon2">
                <img class="searcico" src="/assets/search.svg" alt="o" />
            </button>
        </div>
    </div>

    <a class="btn btn-primary ml-auto mb-4" asp-action="AddCourses" asp-controller="Course"> Add A New Course </a>

    <div class="container">
        <div class="row gap-1 d-flex">
            @foreach (var course in Model)
            {
                <div class="card my-2 col-sm-12 col-md-6 col-lg-4">
                    <div class="card-body">
                        <h5 class="card-title">@course.Title</h5>
                        <h6 class="card-subtitle mb-2 text-body-secondary">@course.Code</h6>
                        <p class="card-text"> @course.Unit Units</p>
                        <a class="btn btn-primary" href="/Course/Edit/@course.Id"> Edit  </a>
                        <button type="button" class="btn card-link btn-danger ml-2" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            <img src="/assets/Delete.svg" alt="Delete" />
                        </button>
                    </div>
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Contact</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are You Sure You Want to Delete This Permanently?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                    <a href="/Course/Delete/@course.Id" class="card-link btn btn-danger">Yes</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="Id" value=@course.Id />
                </div>

            }
        </div>
    </div>


</div>
