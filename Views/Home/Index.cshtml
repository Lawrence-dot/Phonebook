@model List<Phonebook.Models.Contact>;

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <div>
        <div class="input-group mb-3 mt-2  justify-content-center">
            <input type="text" class="form-control searchbar" placeholder="Search Contact" aria-label="Recipient's username" aria-describedby="button-addon2">
            <button class="btn btn-outline-secondary" type="button" id="button-addon2">
                <img class="searcico" src="/assets/search.svg" alt="o" />
            </button>
        </div>
    </div>

    <div class="container"> 
        <div class="row gap-1 d-flex">
            @foreach (var contact in Model)
            {
                <div class="card my-2 col-sm-12 col-md- col-lg-4">
                    <div class="card-body">
                        <h5 class="card-title">@contact.Primary_phone</h5>
                        <h6 class="card-subtitle mb-2 text-body-secondary">@contact.First_name</h6>
                        <p class="card-text"> @contact.Last_name</p>
                        <a href="Phone/ViewPhone/@contact.Id" class="card-link btn btn-info">View</a>
                        <a href="Phone/Edit/@contact.Id" class="card-link btn btn-primary"><img src="/assets/Edit.png" alt="Edit" /></a>
                        <a href="Phone/Delete/@contact.Id" class="card-link btn btn-danger"><img src="/assets/Delete.svg" alt="Delete" /></a>
                    </div>
                </div>
            }
        </div>
    </div>

	
</div>
